<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuAccountLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBackground"
    tools:context=".menu.fragments.MenuAccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/menuAccountLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuAccountMaterialCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/customLinkText"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/menuAccountImage"
                        android:clickable="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/menuAccountUsernameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/customWhite"
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/menuAccountMatchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/customWhite"
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/menuAccountWinText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/customWhite"
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/menuAccountLoseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/customWhite"
                        android:layout_marginBottom="20dp"
                        android:textSize="25dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <FrameLayout
                android:id="@+id/menuAccountFacebookButtonLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/menuAccountFacebookButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuAccountFacebookButtonMaterial"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/customFacebook"
                    android:text=""
                    android:layout_gravity="center"
                    android:textColor="@color/customWhite"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/com_facebook_button_icon"
                    app:iconSize="25dp"
                    app:iconTint="@color/customBackground" />
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menuAccountGoogleButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/customGoogle"
                android:text=""
                android:textColor="@color/customWhite"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_icons8_google"
                app:iconSize="25dp"
                app:iconTint="@color/customBackground" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menuAccountSettingProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="UBAH PROFILE"
                android:layout_gravity="center"
                android:textColor="@color/customWhite"
                android:backgroundTint="@color/customButton"
                app:cornerRadius="10dp"/>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/menuAccountSettingPassword"-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="UBAH PASSWORD"-->
<!--                android:layout_gravity="center"-->
<!--                android:textColor="@color/customWhite"-->
<!--                android:backgroundTint="@color/customButton"-->
<!--                app:cornerRadius="10dp"/>-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menuAccountLogout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="KELUAR"
                android:layout_gravity="center"
                android:textColor="@color/customWhite"
                android:backgroundTint="@color/customButton"
                app:cornerRadius="10dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>