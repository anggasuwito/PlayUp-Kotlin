<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuRankLayout"
    android:layout_width="match_parent"
    android:background="@color/customBackground"
    android:layout_height="match_parent"
    tools:context=".menu.fragments.MenuRankFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/menuRankLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuRankMaterialCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/customLinkText"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/menuRankText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rank user"
                    android:textAlignment="center"
                    android:textColor="@color/customWhite"
                    android:textSize="25dp" />
            </com.google.android.material.card.MaterialCardView>

            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/menuRankButtonLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menuRankBadmintonSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:text="BADMINTON SINGLE"
                        android:layout_gravity="center"
                        android:textColor="@color/customWhite"
                        android:backgroundTint="@color/customButton"
                        app:cornerRadius="10dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menuRankBadmintonDouble"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:text="BADMINTON GANDA"
                        android:layout_gravity="center"
                        android:textColor="@color/customWhite"
                        android:backgroundTint="@color/customButton"
                        app:cornerRadius="10dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menuRankBilliardSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="BILLIARD SINGLE"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/customWhite"
                        android:backgroundTint="@color/customButton"
                        app:cornerRadius="10dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menuRankTennisBorderSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="TENIS MEJA SINGLE"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/customWhite"
                        android:backgroundTint="@color/customButton"
                        app:cornerRadius="10dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menuRankBasketBallTriple"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:text="BASKET 3 ON 3"
                        android:layout_gravity="center"
                        android:textColor="@color/customWhite"
                        android:backgroundTint="@color/customButton"
                        app:cornerRadius="10dp"/>
                </LinearLayout>
            </HorizontalScrollView>
            <FrameLayout
                android:id="@+id/menuRankContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menuRankButtonLinearLayout"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>