<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scheduleCreateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBackground"
    tools:context=".schedule.fragments.ScheduleCreateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scheduleCreateLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Buat Jadwal"
                android:textColor="@color/customBlack"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:layout_marginBottom="50dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/customText"
                app:boxStrokeColor="@color/customText"
                app:startIconTint="@color/customText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/scheduleCreatePlaceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Tempat"
                    android:textColor="@color/customBlack" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/customText"
                app:boxStrokeColor="@color/customText"
                app:startIconTint="@color/customText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/scheduleCreateTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Waktu"
                    android:textColor="@color/customBlack" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scheduleCreateSaveButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="99dp"
                android:backgroundTint="@color/customButton"
                android:text="SIMPAN"
                android:textColor="@color/customWhite"
                app:cornerRadius="10dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/scheduleCreateCancelButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:backgroundTint="@color/customButton"
                android:text="KEMBALI"
                android:textColor="@color/customWhite"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>